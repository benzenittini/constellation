{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2020",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",

        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
    },

    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "./node_modules",
        "dist"
    ]
}
